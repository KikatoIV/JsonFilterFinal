@model List<JsonFilter.Models.CarModel>


<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        
    </head>

    <body>
        <h1>Welcome to the program</h1>

        <h2>Click on Json and paste a link to a raw json data to filter it</h2>

        <h3>View All Data</h3>

        @foreach (var item in Model)
        {
            <p>
                ID: @item.id<br />
                Model: @item.model<br />
                Colour: @item.colour<br />
                Manufacturer: @item.manufacturer<br />
            </p>
            <p>
                Sales History:<br />
                @foreach (var salesHistory in item.salesHistory)
                {
                <p>
                    Year:  @salesHistory.year
                    <br />
                    Vehicles Sales: @salesHistory.vehiclesSold
                    <br />
                </p>
            }
                </p>
            }
    </body>
</html>