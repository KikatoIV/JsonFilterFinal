@model JsonFilter.Models.JsonPageModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Json info page</title>
</head>
    <body>
        @using (Html.BeginForm("Json", "Home", FormMethod.Post))
        {
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <th colspan="2" align="center">JSON URL Info</th>
                </tr>
                <tr>
                    <td>Enter JsonUrl: </td>
                    <td>
                        @Html.TextBox("JsonUrl")
                        @{ 
                            TempData.Keep("JsonUrl");
                        }
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Submit" /></td>
                </tr>
            </table>
        }

    <h1 style="color:red">
        JsonUrl: @ViewBag.JsonUrl
    </h1>

    </body>
</html>